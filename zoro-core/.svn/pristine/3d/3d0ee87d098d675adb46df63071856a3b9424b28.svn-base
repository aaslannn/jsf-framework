.overlayPanel {
	position: fixed;
	z-index: 1000;
	background: #F2F1F1;
	box-shadow: 0 5px 10px rgba(0, 0, 0, 0.8);
	border-radius: 4px 4px 4px 4px;
	border: 1px solid #CCCCCC;
	padding: 5px;
}

.closeButtonWrapper {
	display: inline-block;
	width: 100%;
}

.closeButton {
	margin-left: 5px;
	float: right;
	padding: 1px;
	cursor: pointer
}